<ui:ContentDialog
    x:Class="amrts_map.Dialogs.ClassicDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Preview"
    PrimaryButtonText="Yes"
    SecondaryButtonText="No"
    CloseButtonText="Cancel"
    DefaultButton="Primary">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tb_text" Grid.Row="0" Text="Preview TextBlock Text"/>
        <CheckBox x:Name="chk_box" Grid.Row="1" Content="Preview Checkbox Text" Margin="0,10,0,0"/>
    </Grid>
    
</ui:ContentDialog>
